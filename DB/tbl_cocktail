-- 테이블 생성 SQL - tbl_cocktail
CREATE TABLE tbl_cocktail
(
    `ct_idx`         INT UNSIGNED     NOT NULL    AUTO_INCREMENT COMMENT '칵테일 식별자', 
    `ct_name`        VARCHAR(50)      NOT NULL    COMMENT '칵테일 이름', 
    `ct_ingredient`  TEXT             NOT NULL    COMMENT '칵테일 재료', 
    `ct_type`        VARCHAR(50)      NOT NULL    COMMENT '칵테일 타입', 
    `ct_recipe`      TEXT             NOT NULL    COMMENT '칵테일 제작방법', 
    `ct_info`        TEXT             NOT NULL    COMMENT '칵테일 설명', 
    `ct_img`         VARCHAR(1000)    NOT NULL    COMMENT '칵테일 사진', 
     PRIMARY KEY (ct_idx)
);

-- 테이블 Comment 설정 SQL - tbl_cocktail
ALTER TABLE tbl_cocktail COMMENT '칵테일 정보';
